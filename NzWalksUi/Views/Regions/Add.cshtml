@model NzWalksUi.Models.AddRegionViewModel

<h1 class="mt-3">Add Region</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Index">View Regions</a>
</div>

<form method="post" class="mt-3">
	<div class="mt-3">
		<label class="form-label">Code</label>
		<input type="text" class="form-control" placeholder="Code" asp-for="Code" />
	</div>

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
	</div>

	<div class="mt-3">
		<label class="form-label">Image Url</label>
		<input type="text" class="form-control" placeholder="Image Url" asp-for="RegionImageUrl" />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>
