@model IEnumerable<NzWalksUi.Models.DTOs.RegionDto>

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Code</th>
			<th>Name</th>
			<th>Image Url</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var region in Model)
		{
			<tr>
				<td>@region.Id</td>
				<td>@region.Code</td>
				<td>@region.Name</td>
				<td>@region.RegionImageUrl</td>
				<td><a asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-light">Edit</a></td>
			</tr>
		}
	</tbody>
</table>
